<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiceTypeDetailsActivity" >
<RelativeLayout
        android:id="@+id/rrly_first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_title_height"
        android:background="@color/theme_color1" >

        <ImageView
            android:id="@+id/information_return"
            android:layout_width="@dimen/register_icon_title_width"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/eg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="选择服务类型"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_secondary"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_information_ok"
            android:layout_width="@dimen/feedback_icon_title_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/feedback_shape_btn"
            android:scaleType="centerInside"
            android:src="@drawable/eg"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_m_min" />
    </RelativeLayout>
   
   <TextView
        android:id="@+id/tv_service_furniture"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/register_more"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="家具服务"
        android:textSize="@dimen/text_size_min" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/_gray" />
   
   <TextView
        android:id="@+id/tv_service_lamp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/register_more"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="灯具服务"
        android:textSize="@dimen/text_size_min" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/_gray" />
   
   <TextView
        android:id="@+id/tv_service_category"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/register_more"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="门类服务"
        android:textSize="@dimen/text_size_min" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/_gray" />
   
   <TextView
        android:id="@+id/tv_service_transport"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/register_more"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="运输服务"
        android:textSize="@dimen/text_size_min" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/_gray" />


</LinearLayout>
